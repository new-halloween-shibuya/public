        include /component/globals/header.pug
      .global-body
        .hero.fadein
          include /component/globals/sub-header.pug
        section.section#ws
          .section-content 
            .label ハロウィンマスクのつくりかた
            .course
              each item, i in course
                .item
                  img.num(src=`/images/ws-num-${i+1}.svg`, alt=`${i+1}`)
