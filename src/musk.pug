          include /component/globals/sub-header.pug
        section.section#musk
          .section-content.wrap
            .btn 10/1 発売開始！
            .items
              - for (var x = 0; x < 10; x++)
                .item
                  img(src=`/images/musk/musk-${x+1}.png`)
            .photos
              - for (var x = 0; x < 3; x++)
                .item
                  img(src=`/images/musk/photo-${x+1}.jpg`)
      .global-footer
        include /component/globals/footer.pug