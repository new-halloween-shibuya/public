  #menu
    .list
      .li
        a.section-title(href="/") TOP
      //- .li
      //-   a.section-title(href="#top") 区長メッセージ
      .li
        a.section-title(href="/#content") #あたらしいハロウィン
        .list
          .sub.li: a(href="/mask") 01 #マスクで毎日ハロウィン
          .sub.li: a(href="/workshop") 02 #子どもとマスクづくりハロウィン
          .sub.li: a(href="/present") 03 #プレゼントマスクでハロウィン
          .sub.li: a(href="/backgrounds") 04 #バーチャル背景でハロウィン
      .li
        a.section-title(href="/#sns") SNS
      .li
        a.section-title(href="/#partner") お問い合わせ
  script.
    const menu = document.querySelector('#menu')
    const togl = document.querySelector('#menu-btn')
    togl.addEventListener('click', () => {
      if(menu.style.display === 'block') {
        menu.style.display = 'none'
        togl.classList.remove('open')
      } else {
        menu.style.display = 'block'
        togl.classList.add('open')
      }
    })

    const menuBtns = document.querySelectorAll('#menu a')
    Array.prototype.forEach.call(menuBtns, node => {
      node.addEventListener('click', () => {
        menu.style.display = 'none'
        togl.classList.remove('open')
      })
    });
